@model DocumentRepositoryOnline.Models.Account

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="rectangle">
        <h2 class="textAlignCenter">Register</h2>
        <hr/>
        @Html.ValidationSummary(true, "", new {@class = "text-danger"})
        @Html.EditorFor(model => model.Email, new {htmlAttributes = new {@class = "form-control myInput", @placeholder = "Email"}})
        @Html.ValidationMessageFor(model => model.Email, "", new {@class = "text-danger"})

        @Html.EditorFor(model => model.Password, new {htmlAttributes = new {@class = "form-control myInput", @placeholder = "Password"}})
        @Html.ValidationMessageFor(model => model.Password, "", new {@class = "text-danger"})

        @Html.EditorFor(model => model.RetypePassword, new {htmlAttributes = new {@class = "form-control myInput", @placeholder = "Retype Password"}})
        @Html.ValidationMessageFor(model => model.RetypePassword, "", new {@class = "text-danger"})

        <input type="submit" value="Register" class="btn btn-primary btn-lg myButton"/>

    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


<style>
    .rectangle {
        background: #fff;
        border-radius: 10px;
        box-shadow: 0 0 25px rgba(0, 0, 0, .04);
        margin: 20px 20px;
        padding: 30px;
        box-sizing: border-box;
        position: relative;
        margin: auto;
        width: 50%;
        padding: 10px;
        margin-top: 200px;
        background: rgba(255, 255, 255, 0.9);
        text-align: center;
    }

    .myInput {
        margin: auto;
        margin-top: 10px;
        text-align: center;
        height: 50px;
        font-size: 20px;
    }

    .myButton {
        position: relative;
        margin: auto;
        box-sizing: border-box;
        width: 19%;
        margin-top: 25px !important;
        margin-bottom: 25px;
        font-size: 20px;
    }

    .textAlignCenter {
        text-align: center;
        font-weight: bold;
    }
</style>