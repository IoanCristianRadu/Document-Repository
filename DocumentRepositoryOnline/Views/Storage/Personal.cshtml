    }

    .mySearchBtn {
        margin-top: 0px;
        position: relative;
        float: right;
        width: 40%;
    }

    .mySearchDiv {
        margin-top: 0px;
        position: relative;
        float: right;
        width: 70%;
    }

    .rectangle {
        background: #fff;
        border-radius: 10px;
        box-shadow: 0 0 25px rgba(0,0,0,.04);
        margin: 20px 20px;
        padding: 30px;
        box-sizing: border-box;
        position: relative;
        margin: auto;
        width: 50%;
        padding: 10px;
        margin-top: 100px;
        background: rgba(255,255,255,0.9);
        text-align: center;
    }
</style>
