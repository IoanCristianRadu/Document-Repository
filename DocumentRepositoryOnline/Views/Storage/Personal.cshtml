        margin-top: 30px !important;
    }

    .myInsertFiles {
        padding: 15px 16px 13px;
        line-height: 15px;
        text-transform: uppercase;
        border-width: 0 1px 4px 1px;
        font-size: 12px;
        font-weight: bold;
        border-radius: 5px;
        color: #ffffff;
        background-color: #158cba;
        border-color: #127ba3;
        touch-action: manipulation;
        cursor: pointer;
        background-image: none;
        border: 1px solid transparent;
